<?xml version="1.0" encoding="UTF-8" ?>
<Behaviors xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:noNamespaceSchemaLocation="https://github.com/dkremmydas/Agroscape/blob/BiogasCaseStudy/src/gr/agroscape/behaviors/behaviors.xsd">
	<Behavior>
		<Name>StupidoBehavior</Name>
		<Type>AgentBehavior</Type>
		<FactoryClass>gr.agroscape.behaviors.stupido.StupidoBehaviorFactory</FactoryClass>	
		<ScheduledActions>
			<ScheduledAction>
				<Method>printHappiness</Method>
				<Start>1</Start>
				<Interval>100</Interval>
				<Priority>1</Priority>
			</ScheduledAction>
		</ScheduledActions>
	</Behavior>
</Behaviors>
